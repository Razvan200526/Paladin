{
  "name": "easyres",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun dev/run.ts",
    "fmt": "bun x @biomejs/biome check --write",
    "lint": "bun x @biomejs/biome lint",
    "test": "bun test tests",
    "test:watch": "bun test tests --watch",
    "test:coverage": "bun test tests --coverage",
    "db:migrate": "bun run --bun node_modules/typeorm/cli.js migration:generate ./migrations/Initial -d ./apps/paladin/shared/database/data-source.ts",
    "db:run": "bun run scripts/run-migrations.ts",
    "db:drop": "bun run --bun node_modules/typeorm/cli.js schema:drop -d ./apps/paladin/shared/database/data-source.ts",
    "db:revert": "bun run --bun node_modules/typeorm/cli.js migration:revert -d ./apps/paladin/shared/database/data-source.ts",
    "db": "bun db:migrate && bun db:run",
    "seeds": "bun run seeds/index.ts",
    "build:css": "bun x @tailwindcss/cli -i ./dev/tailwind.css -o ./apps/ruby/shared/public/static/dist/style.css",
    "build:spa": "bun build ./apps/ruby/__init__/App.tsx --outdir ./apps/ruby/shared/public/static/dist --target browser --production --entry-naming app.[ext] --asset-naming [name].[ext] --public-path /static/dist/",
    "build": "bun run build:css && bun run build:spa",
    "prod": "bun run apps/ruby/index.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "latest",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.16.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.962.0",
    "@fontsource/montserrat": "^5.2.8",
    "@google/genai": "^1.34.0",
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@heroui/react": "^2.8.5",
    "@iconify/react": "^6.0.2",
    "@posthog/react": "^1.5.2",
    "@radix-ui/react-toggle": "^1.1.10",
    "@razvan11/paladin": "^1.1.4",
    "@react-stately/utils": "^3.10.8",
    "@sentry/react": "^10.32.1",
    "@tailwindcss/cli": "^4.1.18",
    "@tanstack/react-query": "^5.90.16",
    "@tiptap/extension-bubble-menu": "^3.15.0",
    "@tiptap/extension-character-count": "^3.15.0",
